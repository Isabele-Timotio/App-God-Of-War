<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mensagem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityMensagem"
    android:background="@drawable/fundo5">

    <TextView
        android:id="@+id/TextView"
        android:layout_width="377dp"
        android:layout_height="439dp"
        android:layout_marginBottom="-100dp"
        android:background="#7AF4EEDE"
        android:backgroundTint="@color/design_default_color_error"
        android:drawableTint="@color/white"
        android:fontFamily="casual"
        android:foregroundTint="@color/design_default_color_error"
        android:shadowColor="#A53131"

        android:text="O God of War é um jogo que merece ser jogado por todos os fãs de ação e aventura. Com uma história épica, jogabilidade revolucionária e personagens marcantes, o jogo é uma verdadeira obra-prima dos videogames. E com o aplicativo God of War, os jogadores podem se aprofundar ainda mais no universo do jogo, descobrindo segredos e curiosidades que não estão disponíveis em outras plataformas. Não perca a oportunidade de experimentar essa jornada emocionante pelos Nove Reinos! "
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textColorHighlight="@color/design_default_color_error"
        android:textColorHint="@color/design_default_color_error"
        android:textColorLink="@color/design_default_color_error"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintBottom_toTopOf="@+id/buttonMenu3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonMenu3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:text="@string/buttonMenu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TextViewtitulo"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:background="#7AF4EEDE"
        android:backgroundTint="@color/design_default_color_error"
        android:drawableTint="@color/white"
        android:fontFamily="casual"
        android:foregroundTint="@color/design_default_color_error"
        android:shadowColor="#A53131"
        android:text="MENSAGEM"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/design_default_color_error"
        android:textColorHighlight="@color/design_default_color_error"
        android:textColorHint="@color/design_default_color_error"
        android:textColorLink="@color/design_default_color_error"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintBottom_toTopOf="@+id/TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>